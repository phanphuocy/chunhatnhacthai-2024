<div id="<%= dom_id genre %>">
  <% if action_name != "show" %>
    <%= link_to "Show this genre", genre, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this genre", edit_genre_path(genre), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
